#found-rules
  clear left
  padding-top 20px
  position relative
  #stop-mining
    background transparent url('../images/sprite-icons.png') -14px -511px  no-repeat
    height 24px
    float right
    padding-left 27px
    visibility hidden
    position: absolute; top: 0; right: 0

  ul
    width 100%
    padding-left 0
    float left
    li
      width 100%
      padding-left 0
      float left; clear left

  .found-rule
    cursor default
    list-style-type none
    .rule
      associationRule()
      .field
        height auto !important
      .left-bracket, right-bracket
       top -3px !important
    .ims
      ims()
    .loading
      background transparent url("../images/icon-loading-small.gif") 0 8px no-repeat
      display block; width 20px; height 24px
      opacity 0; visibility hidden
      float right
    .tip-visible
      tip()
    .bk
      background transparent url('../images/sprite-icons.png') -19px -119px no-repeat
      display block; width 16px; height 16px
      position relative; top 9px
      margin 0 10px
      visibility hidden
      float left
    &:hover > .bk
      visibility visible
    .mark
      background transparent url('../images/sprite-icons.png') -18px -68px no-repeat
      display block; width 16px; height 16px
      position relative; top 9px
      margin-left 10px
      visibility hidden
      float left
    &:hover > .mark
      visibility visible
    .clear
      remove()
      position relative; top 7px
      margin-left 5px
      float left
    &:hover > .clear
      visibility visible
    .info
      font-weight normal
      background transparent url('../images/sprite-icons.png') -17px -718px no-repeat
      display none; width 16px; height 16px
      position relative; top 10px; left 3px
      margin-right 10px
      float left

  #view-task-setting,
  #view-task-result
    background transparent url('../images/sprite-icons.png') -11px -557px no-repeat
    height 26px
    float left
    padding 6px 0 0 37px; margin 5px 25px 0 0
    visibility hidden