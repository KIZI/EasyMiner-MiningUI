header
  background: #ededed url("../images/bg-header.png") repeat-x 50% 0;
  height 146px;
  width 100%

  #headerContent
    width:1320px;
    position: relative;
    padding-right:15px;
    margin: 0 auto;

  #browser-warning
    margin 0 0 0 4*boxMargin; padding-top 6px
    color: red
    float: left

  #settings
    text-align right
    height 30px
    padding-top 5px
    float right
    a
      color #CEE7F7
      font-size 14px
      font-weight bold
      text-decoration none
      padding-right 12px
      display block; float left
      height 25px
    a:hover
      color #FFF
      text-decoration underline
    a#new-task
      background transparent url('../images/sprite-icons.png') -113px -262px no-repeat
      padding 2px 0 0 30px; margin-right: 20px
    a#support
      background transparent url('../images/sprite-icons.png') -14px -610px no-repeat
      padding 2px 0 0 30px; margin-right: 20px
    a#settings-open
      background transparent url('../images/sprite-icons.png') -213px -610px no-repeat
      padding 2px 0 0 30px
    a#go-to-cms
      background transparent url('../images/sprite-icons.png') -13px -115px no-repeat
      padding 2px 0 0 30px
      margin-right 20px

  h1
    color h1Color
    font h1Font
    margin 0 0 0 80px;
    padding-top: 16px
    letter-spacing 2px
    clear both

    em
      font-style normal
      letter-spacing normal
      position relative; bottom 5px
      margin 0 2px

    sup
      color #9de045
      font-size 0.6em
      letter-spacing normal
      margin-left 10px
      position relative; top -0.8em

    span
      display block
      font-size 19px
      letter-spacing normal
      position relative; top -8px